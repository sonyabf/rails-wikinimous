
  <title>Article List</title>
  <style>
    /* Remove text decoration from links */
    body {
      text-align: center;
      font-family: 'Arial', sans-serif;
    }

    table {
      margin: auto;
      width: 50%;
    }

    td {
      text-align: left;
      padding: 10px;
    }

    /* Remove text decoration from links */
    a {
      text-decoration: none;
      font-weight: bold;
      font-size: 30px;
    }
  </style>
  <h1>Articles</h1>
  <table>
    <% @articles.each do |article| %>
      <tr>
        <td>
          <%= link_to article.title, article_path(article) %><br>
          <%= article.content[0, 100] %>
        </td>
      </tr>
    <% end %>
  </table>
  </table>
